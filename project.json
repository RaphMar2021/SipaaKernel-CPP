{
    "Name": "SipaaKernel",
    "Description": "A monolithic kernel wrote in C/C++/ASM",
    "Copyright": "Copyright (C) Sipaa Projects 2024-present",
    "License": "MIT",
    "Targets": [
        {
            "Name": "kernel-i686-gnu",
            "Description": "A target for compiling with i686 ELF GNU toolchain",
            "CC": "i686-elf-gcc",
            "CXX": "i686-elf-g++",
            "LD": "i686-elf-ld",
            "ASM": "nasm",
            "Architecture": 2,
            "OutputBinary": "output/kernel-i686.elf",
            "LDScript": "meta/ld/i686.ld",
            "CCFlags": [
                "-Isrc/include",
                "-fpermissive",
                "-ffreestanding",
                "-fno-stack-protector",
                "-fno-pic",
                "-w",
                "-O1",
                "-m32",
                "-g",
                "-c %src%",
                "-o %obj%"
            ],
            "CXXFlags": [
                "-Isrc/include",
                "-fpermissive",
                "-ffreestanding",
                "-fno-stack-protector",
                "-fno-pic",
                "-w",
                "-O1",
                "-m32",
                "-g",
                "-c %src%",
                "-o %obj%"
            ],
            "LDFlags": [
                "-nostdlib",
                "-T%lds%",
                "-m elf_i386",
                "-z max-page-size=0x1000",
                "%objs%",
                "-o %bin%"
            ],
            "ASMFlags": [
                "-f elf32",
                "%src%",
                "-o %obj%"
            ]
        }
    ]
}