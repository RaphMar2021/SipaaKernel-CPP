{
    "$schema": "https://schemas.cute.engineering/stable/cutekit.manifest.target.v1",
    "id": "kernel-aarch64",
    "type": "target",
    "props": {
        "toolchain": "clang",
        "arch": "aarch64",
        "bits": "64",
        "sys": "sk",
        "abi": "sysv",
        "encoding": "utf8",
        "freestanding": true,
        "host": false
    },
    "tools": {
        "cc": {
            "cmd": [
                "@latest",
                "clang"
            ],
            "args": [
                "-target",
                "aarch64-none-elf",
                "-ffreestanding",
                "-fno-stack-protector",
                "-mno-red-zone",
                "-Isrc/kernel/",
                "-Isrc/entry",
                "-Isrc/kernel/sk-hal",
                "-Isrc/libs"
            ]
        },
        "cxx": {
            "cmd": [
                "@latest",
                "clang++"
            ],
            "args": [
                "-target",
                "x86_64-none-elf",
                "-ffreestanding",
                "-fno-stack-protector",
                "-mno-red-zone",
                "-Isrc/kernel/",
                "-Isrc/entry",
                "-Isrc/kernel/sk-hal",
                "-Isrc/libs"
            ]
        },
        "ld": {
            "cmd": [
                "@latest",
                "ld.lld"
            ],
            "args": [
                "-m",
                "aarch64elf",
                "-Tmeta/targets/kernel-aarch64.ld",
                "-z",
                "max-page-size=0x1000"
            ],
            "files": [
                "meta/targets/kernel-aarch64.ld"
            ]
        },
        "ar": {
            "cmd": [
                "@latest",
                "llvm-ar"
            ],
            "args": [
                "rcs"
            ]
        },
        "as": {
            "cmd": [
                "@latest",
                "nasm"
            ],
            "args": [
                "-f elf64"
            ]
        }
    }
}